<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seats">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="800sp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:text="Please select the seats from below"
            android:textColor="@color/main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCitySection"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/not_selected_btn"
                    android:gravity="center"
                    android:text="City"
                    android:textAllCaps="false"
                    android:textColor="@color/mainDarker"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtCinemaSection"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/not_selected_btn"
                    android:gravity="center"
                    android:text="Cinema"
                    android:textAllCaps="false"
                    android:textColor="@color/mainDarker"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtMoviesSection"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/not_selected_btn"
                    android:gravity="center"
                    android:text="Movies"
                    android:textAllCaps="false"
                    android:textColor="@color/mainDarker"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custome_button"
                    android:gravity="center"
                    android:text="Seats"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />




            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:layout_width="84dp"
                android:layout_height="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custome_button" />
            <Button
                android:layout_width="84dp"
                android:layout_height="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custome_button" />
            <Button
                android:layout_width="84dp"
                android:layout_height="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custome_button" />
            <Button
                android:layout_width="84dp"
                android:layout_height="7dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custome_button" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_margin="10dp"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/dropdownSeatsA"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/border_input"
                android:text=" A "
                android:textSize="30sp"
                android:textColor="@color/main"
                android:textAlignment="center"
                android:fontFamily="sans-serif-black"
                android:drawableEnd="@drawable/arrow_drop_down"

                />

        </GridLayout>

    </LinearLayout>
</FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>